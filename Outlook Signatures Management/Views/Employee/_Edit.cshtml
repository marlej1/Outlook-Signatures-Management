@model Outlook_Signatures_Management.Models.Employee





<div class="container-fluid">
    @using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { id = "userSaveForm" }))
    {
        <div class="row">
            <div class="col-xs-7">

                <h3>Personal Details</h3>

                @Html.AntiForgeryToken()

